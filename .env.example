# Ghost Voice OS - Environment Configuration
# Copy to .env and fill in your actual values

# ===== VOICE OS CORE =====
VOICE_OS_HOST=0.0.0.0
VOICE_OS_PORT=8000
VOICE_OS_ENV=development          # development or production

# ===== TTS PROVIDERS =====
ELEVENLABS_API_KEY=sk_...
ELEVENLABS_MODEL=eleven_multilingual_v2

GOOGLE_CLOUD_API_KEY=
GOOGLE_CLOUD_TTS_VOICE_ID=en-US-Neural2-A

AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=eastus

# ===== STT PROVIDERS =====
APPLE_STT_SERVICE_URL=http://localhost:8001
APPLE_STT_FALLBACK_TO_WHISPER=true

DEEPGRAM_API_KEY=
DEEPGRAM_MODEL=nova-2

# ===== LLM PROVIDERS =====
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4

LLAMA_CPP_MODEL_PATH=/models/llama-2-7b-chat.gguf
MLX_MODEL_NAME=mlx-community/Llama-2-7b-chat

# ===== TELEPHONY PROVIDERS =====
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=+1234567890

TELNYX_API_KEY=
TELNYX_PHONE_NUMBER=+1234567890

# ===== DATABASE & STORAGE =====
POSTGRES_URL=postgresql://postgres:password@postgres:5432/voiceos
REDIS_URL=redis://redis:6379
OPENSEARCH_URL=http://opensearch:9200

# ===== VOICE OS CONFIGURATION =====
DEFAULT_TTS_PROVIDER=elevenlabs              # elevenlabs, azure, google, local
DEFAULT_STT_PROVIDER=apple_stt               # apple_stt, whisper, deepgram
DEFAULT_LLM_PROVIDER=openai                  # openai, llama_cpp, mlx

# ===== MULTI-TENANT =====
ENABLE_MULTI_TENANT=true
TENANT_CONFIG_DIR=./tenants

# ===== LOGGING & MONITORING =====
LOG_LEVEL=INFO                          # DEBUG, INFO, WARNING, ERROR, CRITICAL
ENABLE_METRICS=true
METRICS_PORT=9090

# ===== SECURITY =====
API_KEY_HEADER=X-API-Key
ENABLE_CORS=true
CORS_ORIGINS=*

# ===== DEPLOYMENT =====
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_PREFIX=ghost-voice-os
